<div class="modal fade theme--verde-oscuro seccion--oscura" id="participarModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="ajax-loading js-frm-loading" style="display:none">
        <img class="ajax-loading__icon" src="/imgs/ajax-loader.svg"/>
      </div>
      <div class="modal-header js-modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">
          {{ i18n.inscripcion.comienzo_titulo }}
          "<span class="js-nombre-proyecto"></span>"
        </h4>
      </div>
      <div class="modal-body">

        <form id="participacionForm">

          <div class="alert alert-danger js-formulario-error" style="display: none">
            {{ i18n.inscripcion.mensaje_error }}
          </div>
 
          <input type="hidden" id="proyecto" class="js-hidden-proyecto" />
          <input type="hidden" id="idioma" value="{{ page.lang }}" class="js-hidden-idioma" />

          <div class="form-group">
            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="{{ i18n.inscripcion.nombre }}" required>
          </div>

          <div class="form-group">
            <input type="text" class="form-control" id="apellidos" name="apellidos" placeholder="{{ i18n.inscripcion.apellidos }}" required>
          </div>

          <div class="form-group">
            <input type="email" class="form-control" id="email" name="email" placeholder="{{ i18n.inscripcion.email }}" required>
          </div>

          <div class="form-group">
            <select class="form-control" id="edicionMib" name="edicionMib" required>
              <option value="">{{ i18n.inscripcion.combo_edicion_mib }}</option>
              <option value="1">{{ i18n.inscripcion.edicion1 }}</option>
              <option value="2">{{ i18n.inscripcion.edicion2 }}</option>
              <option value="3">{{ i18n.inscripcion.edicion3 }}</option>
              <option value="4">{{ i18n.inscripcion.edicion4 }}</option>
              <option value="5">{{ i18n.inscripcion.edicion5 }}</option>
            </select>
          </div>

          <a class="btn btn-cuadrado btn-cuadrado--secondary" id="apuntarse-proyecto">{{ i18n.inscripcion.boton-apuntarme }}</a>

        </form>
      </div>

      <div class="js-formulario-ok text-center" style="display: none">
        <p>
          {{ i18n.inscripcion.mensaje_ok }}
        </p>
        <a class="btn btn-cuadrado btn-cuadrado--secondary" data-dismiss="modal">{{ i18n.inscripcion.boton-cerrar }}</a>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->